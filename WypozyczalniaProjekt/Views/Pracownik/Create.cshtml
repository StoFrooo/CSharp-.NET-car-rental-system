@model WypozyczalniaProjekt.Models.DbModels.Pracownik

@{
    ViewBag.Title = "Dodawanie pracownika";
}

<h2 class="addTitle">Dodawanie pracownika</h2>
<div class="ModelAddWrapper">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="addForm">
            @Html.ValidationSummary(true, "")
            <div class="form">
                @Html.DisplayName("Imię")
                <div>
                    @Html.EditorFor(model => model.ImiePracownika)
                    @Html.ValidationMessageFor(model => model.ImiePracownika, "")
                </div>
            </div>

            <div class="form">
                @Html.DisplayName("Nazwisko")
                <div>
                    @Html.EditorFor(model => model.NazwiskoPracownika)
                    @Html.ValidationMessageFor(model => model.NazwiskoPracownika, "")
                </div>
            </div>

            <div class="form">
                @Html.DisplayName("Adres")
                <div>
                    @Html.EditorFor(model => model.AdresZamieszkaniaPracownika)
                    @Html.ValidationMessageFor(model => model.AdresZamieszkaniaPracownika, "")
                </div>
            </div>

            <div class="form">
                @Html.DisplayName("Pensja")
                <div>
                    @Html.EditorFor(model => model.Pensja)
                    @Html.ValidationMessageFor(model => model.Pensja, "")
                </div>
            </div>

            <div class="form">
                @Html.DisplayName("Telefon")
                <div>
                    @Html.EditorFor(model => model.NrTelefonuPracownika)
                    @Html.ValidationMessageFor(model => model.NrTelefonuPracownika, "")
                </div>
            </div>

            <div class="form">
                @Html.DisplayName("Stanowisko")
                <div>
                    @Html.EditorFor(model => model.Stanowisko)
                    @Html.ValidationMessageFor(model => model.Stanowisko, "")
                </div>
            </div>

            <div class="form">
                <div>
                    <input type="submit" value="Create" class="editButton" />
                </div>
            </div>
        </div>
    }

    <div class="back">
        @Html.ActionLink("Powrót", "ViewAll")
    </div>
    </div>

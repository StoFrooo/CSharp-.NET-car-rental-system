@model IEnumerable<WypozyczalniaProjekt.Models.DbModels.Model>

@{
    ViewBag.Title = "Pojazdy";
}

<h2 class="Title">Pojazdy</h2>
<div class="Wrapper">
    <p>
        @Html.ActionLink("Dodaj samochód", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayName("Marka")
            </th>
            <th>
                @Html.DisplayName("Model")
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NazwaMarki)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NazwaModelu)
                </td>
                <td class="editButtons">
                    @Html.ActionLink("Edytuj", "Edit", new { id = item.ModelID }) |
                    @Html.ActionLink("Usuń", "Delete", new { id = item.ModelID })
                </td>
            </tr>
        }

    </table>
</div>
